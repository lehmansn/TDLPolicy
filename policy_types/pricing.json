{
  "policy_type": "pricing",
  "description": "Defines the costs to subsribe to this topic",
  "policy_category": "topic",
  "icon": "www.url-with-image.com",
  "input": [
    {
      "value": "name",
      "datatype": "string",
      "description": "Unique name of this policy"
    },
    {
      "value": "cost",
      "datatype": "number",
      "description": "Cost to subscribe on this topic"
    },
    {
      "value": "currency",
      "datatype": "enum",
      "description": "Currency of the costs",
      "enum": [
        "euro",
        "dollar"
      ]
    },
    {
      "value": "cost_period",
      "datatype": "enum",
      "description": "Period after which new payments have to be made",
      "enum": [
        "once",
        "day",
        "month",
        "quarter",
        "year"
      ]
    }
  ],
  "example": {
    "name": "small package",
    "cost": 0.99,
    "currency": "euro",
    "cost_period": "month"
  }
}